<div class="booklist-item row list-group-item container-fluid">

	<div class="row">

		<div class="book-info">
			<h4 class="book-title col-xs-6">Title: {{book.title}}</h4>
			<h4 class="rating col-xs-2">Rating: {{book.rating}}</h4>
		</div>
	
		<div class="col-xs-2 pull-right btn-group">
			<button class="btn btn-info toggle" name="rate">Rate</button>
			<button class="btn btn-danger delete" name="rate">Delete</button>
		</div>
	
		<div class="col-xs-1"></div>

	</div>

	<div class="togglediv row dropdown-container">
		
		<label class="col-xs-4" for="id_rate">Rate: </label>

		<div class="col-xs-1"></div>

		<input class="rate_value col-xs-4" type="number" id="id_rate" name="rate" min="1" max="10" value="{{book.rating}}" />

		<div class="col-xs-1"></div>
		
		<button class="btn btn-success rate col-xs-2" name="submit">Rate</submit>

	</div>

</div>
